- form_for [:admin, @shop_product], :html => {'data-onsubmit_status'=>"Saving Changes&#8230;"} do |f|
  = hidden_field_tag 'shop_product_id',@shop_product.id 
  
  - render_region :form do |form|  
    - form.inputs do
      = render :partial => '/admin/shop/products/edit/inputs',  :locals => { :f => f }

    - form.meta do
      = render :partial => '/admin/shop/products/edit/meta',    :locals => { :f => f }

    - form.parts do
      = render :partial => '/admin/shop/products/edit/parts',   :locals => { :f => f }

    - form.foot do
      = render :partial => 'admin/shop/products/edit/foot',     :locals => { :f => f }